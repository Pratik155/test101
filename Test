import plotly.express as px
import pandas as pd

# Sample data
data = {
    'BankProducts': ['Savings', 'Checking', 'Credit Card', 'Loan'],
    'resolvedconv_num': [120, 90, 150, 80],
    'unresolvedconv_num': [15, 10, 25, 5]
}

df = pd.DataFrame(data)

# Plotting the bubble chart
fig = px.scatter(df, x='BankProducts', y=['resolvedconv_num', 'unresolvedconv_num'],
                 size=['resolvedconv_num', 'unresolvedconv_num'],
                 labels={'BankProducts': 'Bank Products', 'value': 'Number of Conversations', 'variable': 'Type'},
                 title='Resolved and Unresolved Conversations by Bank Products',
                 template='plotly_white',
                 color_discrete_sequence=['blue', 'red']
                 )

# Update x-axis tick angle for better readability
fig.update_layout(xaxis=dict(tickangle=45))

fig.show()
