import streamlit as st

si = st.button('Show insights')

if si:
    st.markdown('The call was awesome! Just work a little on sounding a bit happy if the customer is.')
    st.markdown("Here's the video:")
    video_html = """
    <style>
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* semi-transparent black */
        z-index: 1;
    }
    </style>
    <div id="overlay" class="overlay" onclick="hideOverlay()"></div>
    <script>
    function hideOverlay() {
        document.getElementById("overlay").style.display = "none";
    }
    </script>
    <center>
    <video controls autoplay="true" muted="false" loop="true">
    <source src="https://static.streamlit.io/examples/star.mp4" type="video/mp4" />
    </video>
    </center>
    """
    st.markdown(video_html, unsafe_allow_html=True)
